{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Sentence aligner API"
  },
  "tags": [
    {
      "name": "sentences",
      "description": "Operations on sentences"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/sentences": {
      "post": {
        "tags": [
          "sentences"
        ],
        "summary": "Create a new sentence.",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The sentence object that has to be created.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sentence"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "The sentence has been created."
          },
          "409": {
            "description": "The given UUID is already used by another sentence."
          }
        }
      },
      "get": {
        "tags": [
          "sentences"
        ],
        "summary": "Get all the sentences.",
        "responses": {
          "200": {
            "description": "Returns all the sentences.",
            "schema": {
              "$ref": "#/definitions/sentences"
            },
            "examples": {
              "application/json": [
                {
                  "id": "4491-808e-405d-9fdd-0e853a383bcc",
                  "text": "It rains.",
                  "iso639_3": "eng",
                  "structure": "<sentence><subject>It</subject> <verb>rains</verb>.</sentence>"
                }
              ]
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Sentence": {
      "type": "object",
      "required": [
        "text",
        "iso639_3"
      ],
      "properties": {
        "id": {
          "type": "string",
          "example": "313a4491-808e-405d-9fdd-0e853a383bcc"
        },
        "text": {
          "type": "string",
          "example": "It rains."
        },
        "iso639_3": {
          "type": "string",
          "example": "eng"
        },
        "structure": {
          "type": "string",
          "example": "<sentence><subject>It</subject> <verb>rains</verb>.</sentence>"
        }
      }
    },
    "sentences": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Sentence"
      }
    }
  }
}
